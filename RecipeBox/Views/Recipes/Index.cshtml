@{
    Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Recipe>;

<div>
<h2> Current Recipes for @User.Identity.Name:</h2>

@if (@Model.Count == 0)
{
    <p>No recipes have been added!</p>
}
else
{
    <ul>
    @foreach (Recipe recipe in Model)
    {
        <li>
        @Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId }) by:
        @Html.ActionLink($"{recipe.Author.Name}", "Details", "Authors", new { id = recipe.AuthorId }, null)

        </li>
    }
    </ul>
}