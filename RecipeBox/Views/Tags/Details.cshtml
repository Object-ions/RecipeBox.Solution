@{
    Layout = "_Layout";
}

@using RecipeBox.Models
@model RecipeBox.Models.Tag

<h2>Tag Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Tag has not been assigned with any recipe yet.</p>
}
else
{
  <h4>@Html.DisplayNameFor(model => model.Name) has the following recipes:</h4>
  <ul>
  @foreach(RecipeTag join in Model.JoinEntities)
  {
    <li>@join.Recipe.Name</li>
  }
  </ul>
}
<p>@Html.ActionLink("Add a recipe", "AddRecipe", new { id = Model.TagId }) </p>
<p>@Html.ActionLink("Edit tag's profile", "Edit", new { id = Model.TagId })</p>
<p>@Html.ActionLink("Delete this profile", "Delete", new { id = Model.TagId})
<br />
<p>@Html.ActionLink("Back to list", "Index")</p>