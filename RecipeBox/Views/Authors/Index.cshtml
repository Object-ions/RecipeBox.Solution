@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<div>
  <div>
    <h2>List of Authors</h2>

    @if (@Model.Count == 0)
    {
      <p>No Authors have been added yet!</p>
    }

    <ul>
      @foreach(Author author in Model)
      {
        <li>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</li>

        <li>@Html.ActionLink(@author.Name, "Details", "Authors", new { id = @author.AuthorId })</li>
      }
    </ul>
  </div>
  
  <div>
  <p>@Html.ActionLink("Add a new author", "Create")</p>
  </div>

</div>